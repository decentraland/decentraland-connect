{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2021", "dom"],
    "target": "es2021",
    "module": "esnext",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "esm",
    "cjs",
    "build",
    "scripts",
    "webpack"
  ]
}
